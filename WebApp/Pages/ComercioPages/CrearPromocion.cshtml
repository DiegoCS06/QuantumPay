@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.ComercioPages.CrearPromocionModel
@{
}
@attribute [Authorize(Roles = "CuentaComercio")]

<div class="text-end">
    <a asp-page="/ComercioPages/ComercioHome" class="btn btn-outline-dark">⬅️ Volver</a>
</div>
<div class="col-lg-12">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                🔖 Crear Promoción
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered" style="min-width: 600px; width: 100%;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Comercio</th>
                            <th>Descripción</th>
                            <th>Descuento</th>
                            <th>Vigencia</th>
                        </tr>
                    </thead>
            
                </table>
            </div>
        </div>
    </div>
</div>

<legend>Formulario Promoción</legend>
<div class="col-lg-6">
    <form method="post">
        <fieldset>
            <div class="form-group">
                <label for="txtId">ID Promoción</label>
                <input id="txtId" name="Id" readonly type="number" class="form-control" />
            </div>

            <div class="form-group">
                <label for="txtComercio">Comercio</label>
                <select id="txtComercio" name="ComercioID" class="form-control">
                </select>
            </div>

            <div class="form-group">
                <label for="txtDescripcion">Descripción</label>
                <textarea id="txtDescripcion" name="Descripcion" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group">
                <label for="txtDescuento">Descuento (%)</label>
                <input id="txtDescuento" name="Descuento" type="number" step="0.01" class="form-control" />
            </div>

            <div class="form-group">
                <label for="txtVigencia">Vigencia</label>
                <input id="txtVigencia" name="Vigencia" type="date" class="form-control" />
            </div>
        </fieldset>
    </form>

    <br />
    <button id="btnCreatePromo" class="btn btn-primary btn-xs" type="submit">Crear</button>
    <button id="btnUpdatePromo" class="btn btn-info btn-xs" type="button">Actualizar</button>
    <button id="btnDeletePromo" class="btn btn-danger btn-xs" type="button">Eliminar</button>
</div>