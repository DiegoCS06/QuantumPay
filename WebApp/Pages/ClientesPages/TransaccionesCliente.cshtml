@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.ClientesPages.TransaccionesClienteModel
@section Scripts {
    <script>
        var userToken = '@HttpContext.Request.Cookies["jwt_token"]';
    </script>
    <script src="~/js/pages/Transacciones.js"></script>
}
@attribute [Authorize(Roles = "Cliente")]

<div class="text-end">
    <a asp-page="/ClientesPages/ClienteHome" class="btn btn-outline-dark">⬅️ Volver</a>
</div>
<legend>Historial de Transacciones</legend>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-success text-white">
                🔔 Transacciones Realizadas
            </div>
            <div class="card-body" style="overflow-x: auto; width: 100%;">
                <table id="loadTableId" class="table table-bordered table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID Transacción</th>
                            <th>Id Cliente</th>
                            <th>Cuenta Bancaria</th>
                            <th>Comercio</th>
                            <th>Monto</th>
                            <th>Descuento</th>
                            <th>Fecha</th>
                            <th>Método de Pago</th>
                        </tr>
                    </thead>              
                </table>
            </div>
        </div>
    </div>    
</div>
