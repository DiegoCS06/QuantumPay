@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.BancoPages.CrearPromocionModel
@section Scripts{
    <script>
        var userToken = '@HttpContext.Request.Cookies["jwt_token"]';
    </script>

}
@attribute [Authorize(Roles = "InstitucionBancaria")]

<div class="text-end">
    <a asp-page="/BancoPages/BancoHome" class="btn btn-outline-dark">⬅️ Volver</a>
</div>
<div class="    bs-docs-section">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    🔖 Promociones Bancarias
                </div>
                <div class="card-body" style="overflow-x: auto; width: 100%;">
                    <table id="" class="display" style="width:100%">
                        <tr>
                            <th>ID</th>
                            <th>Banco</th>
                            <th>Descripción</th>
                            <th>Descuento</th>
                            <th>Vigencia</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<legend>Formulario Promoción</legend>
<div class="col-lg-6">
    <form method="post">
        <fieldset>
            <div class="form-group">
                <label for="txtId">ID Promoción</label>
                <input id="txtId" name="Id" readonly type="number" class="form-control" />
            </div>

            <div class="form-group">
                <label for="txtBanco">Banco</label>
                <select id="txtBanco" name="BancoId" class="form-control">
                    <option value="">-- Seleccione un banco --</option>
                </select>
            </div>

            <div class="form-group">
                <label for="txtDescripcion">Descripción</label>
                <textarea id="txtDescripcion" name="Descripcion" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group">
                <label for="txtDescuento">Descuento (%)</label>
                <input id="txtDescuento" name="Descuento" type="number" step="0.01" class="form-control" />
            </div>

            <div class="form-group">
                <label for="txtVigencia">Vigencia</label>
                <input id="txtVigencia" name="Vigencia" type="date" class="form-control" />
            </div>
        </fieldset>
    </form>

    <br />
    <button id="btnCreatePromo" class="btn btn-primary btn-xs" type="submit">Crear</button>
    <button id="btnUpdatePromo" class="btn btn-info btn-xs" type="button">Actualizar</button>
    <button id="btnDeletePromo" class="btn btn-danger btn-xs" type="button">Eliminar</button>
</div>