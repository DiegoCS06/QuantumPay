@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.ComercioPages.AdministrarComerciosModel
@section Scripts {
    <script>
        var userToken = '@HttpContext.Request.Cookies["jwt_token"]';
    </script>
    <script src="~/js/pages/cuentacomercio.js"></script>
}
@attribute [Authorize(Roles = "CuentaComercio")]

<div class="text-end">
    <a asp-page="/ComercioPages/ComercioHome" class="btn btn-outline-dark">⬅️ Volver</a>
</div>
<div class="col-lg-12">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                Administrar Comercio
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered" style="min-width: 600px; width: 100%;">
                    <thead>
                        <tr>
                            <th>ID Cuenta</th>
                            <th>Nombre Usuario</th>
                            <th>Cédula Jurídica</th>
                            <th>Teléfono</th>
                            <th>Correo Electrónico</th>
                            <th>Dirección</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="ns-component">
            <form>
                <div class="row mt-3">
                    <div class="col-lg-4">
                        <label for="txtSearchComercioId">Buscar por Comercio ID</label>
                        <div class="input-group">
                            <input id="txtSearchComercioId" type="number" class="form-control">
                            <button id="btnSearch" class="source-button btn btn-secondary btn-xs" type="button">Buscar</button>
                        </div>
                    </div>
                </div>
                <fieldset>
                    <legend>Administrar Cuenta de Comercio</legend>
                    <div class="form-group">
                        <label for="txtIdCuenta" class="form-label mt-$">Cuenta</label>
                        <input id="txtIdCuenta" type="number" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="txtNombreUsuario" class="form-label mt-$">Nombre Usuario</label>
                        <input id="txtNombreUsuario" type="text" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="txtContrasena" class="form-label mt-$">Contraseña</label>
                        <input id="txtContrasena" type="password" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="txtCedulaJuridica" class="form-label mt-$">Cédula Jurídica</label>
                        <input id="txtCedulaJuridica" type="text" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="txtTelefono" class="form-label mt-$">Teléfono</label>
                        <input id="txtTelefono" type="number" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtCorreoElectronico" class="form-label mt-$">Correo Electrónico</label>
                        <input id="txtCorreoElectronico" type="email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtDireccion" class="form-label mt-$">Dirección</label>
                        <input id="txtDireccion" type="text" class="form-control" />
                    </div>
                </fieldset>
            </form>
            <br />
            <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button">Save</button>
            <button id="btnUpdate" class="source-button btn btn-info btn-xs" type="button">Update</button>
            <button id="btnDelete" class="source-button btn btn-danger btn-xs" type="button">Delete</button>
        </div>
    </div>
</div>