@page "{editId:int?}"
@model WebApp.Pages.Comisiones.CreateModel

@{
    var isEdit = Model.Input.Id > 0;
    ViewData["Title"] = isEdit ? "Editar Comisión" : "Nueva Comisión";
}

<h2>@ViewData["Title"]</h2>

<form method="post" class="w-50">
    <input type="hidden" asp-for="Input.Id" />

    <div class="mb-3">
        <label asp-for="Input.IdInstitucionBancaria" class="form-label"></label>
        <input asp-for="Input.IdInstitucionBancaria" class="form-control" />
        <span asp-validation-for="Input.IdInstitucionBancaria" class="text-danger" />
    </div>

    <div class="mb-3">
        <label asp-for="Input.IdCuentaComercio" class="form-label"></label>
        <input asp-for="Input.IdCuentaComercio" class="form-control" />
        <span asp-validation-for="Input.IdCuentaComercio" class="text-danger" />
    </div>

    <div class="mb-3">
        <label asp-for="Input.Porcentaje" class="form-label"></label>
        <input asp-for="Input.Porcentaje" class="form-control" step="0.0001" />
        <span asp-validation-for="Input.Porcentaje" class="text-danger" />
    </div>

    <div class="mb-3">
        <label asp-for="Input.MontoMaximo" class="form-label"></label>
        <input asp-for="Input.MontoMaximo" class="form-control" />
        <span asp-validation-for="Input.MontoMaximo" class="text-danger" />
    </div>

    <button type="submit" class="btn btn-success me-2">
        @(isEdit ? "Actualizar" : "Crear")
    </button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/ControlActions.js"></script>
    <script src="~/js/pages/Comisiones.js"></script>
}
