@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.ClientesPages.TransaccionesClienteModel
@{
}
@attribute [Authorize(Roles = "Cliente")]
<input type="hidden" id="hdnClienteId" value="1" />

<div class="text-end">
    <a asp-page="/ClientesPages/ClienteHome" class="btn btn-outline-dark">⬅️ Volver</a>
</div>
<legend>Historial de Transacciones</legend>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-success text-white">
                🔔 Transacciones Realizadas
            </div>
            <div class="card-body" style="overflow-x: auto; width: 100%;">
                <table id="tblTransaccionesCliente" class="table table-bordered table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID Transacción</th>
                            <th>Fecha</th>
                            <th>Monto</th>
                            <th>Tipo</th>
                            <th>Cuenta Origen</th>
                            <th>Cuenta Destino</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/js/ControlActions.js"></script>
@section Scripts {
    <script src="~/js/Pages/ClientesPages/TransaccionesCliente.js" asp-append-version="true"></script>
}
