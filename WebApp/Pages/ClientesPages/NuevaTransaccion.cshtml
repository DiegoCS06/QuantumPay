@page
@model WebApp.Pages.ClientesPages.NuevaTransaccionModel
@{
    ViewData["Title"] = "Nueva Transacción";
}
<input type="hidden" id="hdnClienteId" value="@Model.ClienteId" />
<input type="hidden" id="hdnEmail" value="@Model.Email" />
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="ddlCuentas">Cuenta Bancaria</label>
            <select id="ddlCuentas" class="form-control"></select>
        </div>
        <div class="form-group">
            <label for="ddlComercios">Comercio</label>
            <select id="ddlComercios" class="form-control"></select>
        </div>
        <div class="form-group">
            <label for="txtMonto">Monto</label>
            <input id="txtMonto" type="number" step="0.01" class="form-control" />
        </div>
        <div class="form-group">
            <label for="txtMetodoPago">Método de Pago</label>
            <input id="txtMetodoPago" type="text" class="form-control" />
        </div>
        <button id="btnAceptar" class="btn btn-primary">Aceptar</button>
    </div>
</div>
<script src="~/js/ControlActions.js"></script>
@section Scripts {
    <script src="~/js/Pages/Transacciones.js" asp-append-version="true"></script>
}
