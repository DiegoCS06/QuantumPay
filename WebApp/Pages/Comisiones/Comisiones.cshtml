@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.Comisiones.ComisionesModel

@{
}
@attribute [Authorize(Roles = "Admin")]
<script src="~/js/pages/Comisiones.js" asp-append-version="true"></script>

<div class="text-end">
    <a asp-page="/AdminPages/AdminHome" class="btn btn-outline-dark">⬅️ Volver</a>
</div>
<div class="bs-docs-section">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    Comisiones
                </div>
                <div class="card-body" style="overflow-x: auto; width: 100%;">
                    <table id="tblComisiones" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Banco</th>
                                <th>Comercio</th>
                                <th>%</th>
                                <th>Tope</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <legend>Formulario Comisión</legend>
        <div class="col-lg-6">
            <form>
                <fieldset>
                    <div class="form-group">
                        <label for="txtId">ID Comisión</label>
                        <input id="txtId" readonly type="number" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtIdInstitucionBancaria">Banco</label>
                        <input id="txtIdInstitucionBancaria" type="number" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtIdCuentaComercio">Comercio (opcional)</label>
                        <input id="txtIdCuentaComercio" type="number" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtPorcentaje">% Comisión</label>
                        <input id="txtPorcentaje" type="number" step="0.0001" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtMontoMaximo">Tope Monto</label>
                        <input id="txtMontoMaximo" type="number" class="form-control" />
                    </div>
                </fieldset>
            </form>

            <br />
            <button id="btnCreate" class="btn btn-primary btn-xs" type="button">Crear</button>
            <button id="btnUpdate" class="btn btn-info btn-xs" type="button">Actualizar</button>
            <button id="btnDelete" class="btn btn-danger btn-xs" type="button">Eliminar</button>
        </div>
    </div>
</div>

